<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Display. -->
    <style name="myCalc.portraitOperationText" parent="myCalc.operationText">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="myCalc.portraitOperatorText" parent="myCalc.portraitOperationText">
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="myCalc.portraitOperationResultText" parent="myCalc.portraitOperationText">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="myCalc.portraitEqualText" parent="myCalc.portraitOperationResultText">
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- Keyboard. -->
    <style name="myCalc.shapeAppearancePortraitComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="myCalc.portraitKeyboardContainer" parent="myCalc.keyboardContainer">
    </style>

    <style name="myCalc.portraitKeyButton" parent="myCalc.keyButton">
        <item name="shapeAppearance">@style/myCalc.shapeAppearancePortraitComponent</item>
    </style>

    <style name="myCalc.portraitNumbersButton" parent="myCalc.portraitKeyButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="myCalc.portraitEqualButton" parent="myCalc.portraitNumbersButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white_ripple</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="myCalc.portraitOperatorsButton" parent="myCalc.operatorsButton">
        <item name="shapeAppearance">@style/myCalc.shapeAppearancePortraitComponent</item>
    </style>
</resources>